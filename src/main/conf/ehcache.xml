<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core.xsd
                            http://www.ehcache.org/v3/jsr107 http://www.ehcache.org/schema/ehcache-jsr107.xsd">

    <service>
        <jsr107:defaults enable-management="true" enable-statistics="true"/>
    </service>

    <!-- Set a disk store path globally -->
    <persistence directory="${java.io.tmpdir}/ehcache"/>

    <!-- Default Cache Configuration -->
    <cache alias="default">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="days">2</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100000</heap>
            <offheap unit="MB">50</offheap>
            <disk unit="MB" persistent="true">100</disk>
        </resources>
    </cache>

    <!-- Hibernate Default Update Timestamps Cache -->
    <cache alias="default-update-timestamps-region">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="days">2</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100000</heap>
            <offheap unit="MB">50</offheap>
            <disk unit="MB" persistent="true">100</disk>
        </resources>
    </cache>

    <!-- Hibernate Default Query Results Cache -->
    <cache alias="default-query-results-region">
        <key-type>org.hibernate.cache.spi.QueryKey</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="days">2</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100000</heap>
            <offheap unit="MB">50</offheap>
            <disk unit="MB" persistent="true">100</disk>
        </resources>
    </cache>
</config>