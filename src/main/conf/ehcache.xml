<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3
            http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <!-- Cache template for optimal ERP performance with 500+ users -->
    <cache-template name="defaultCacheTemplate">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">50</offheap>
        </resources>
    </cache-template>

    <!-- Hibernate Second Level Cache Regions -->
    <cache alias="default-query-results-region" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">100</offheap>
        </resources>
    </cache>

    <cache alias="default-update-timestamps-region" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="minutes">60</ttl>
        </expiry>
        <resources>
            <heap unit="entries">5000</heap>
            <offheap unit="MB">20</offheap>
        </resources>
    </cache>

    <!-- Entity caches for frequently accessed ERP data -->
    <cache alias="com.example.lazyco.entity.User" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="minutes">60</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">30</offheap>
        </resources>
    </cache>

    <cache alias="com.example.lazyco.entity.Role" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="hours">2</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <cache alias="com.example.lazyco.entity.Permission" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="hours">4</ttl>
        </expiry>
        <resources>
            <heap unit="entries">200</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

    <!-- Configuration and lookup data caches -->
    <cache alias="application-config-cache" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="hours">12</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
            <offheap unit="MB">15</offheap>
        </resources>
    </cache>

    <!-- Session cache for distributed environments -->
    <cache alias="session-cache" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">50</offheap>
        </resources>
    </cache>
</config>
