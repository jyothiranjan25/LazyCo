<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3
            http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <!-- Cache template optimized for 500+ concurrent users ERP performance -->
    <cache-template name="defaultCacheTemplate">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">100</offheap>
        </resources>
    </cache-template>

    <!-- Hibernate Second Level Cache Regions - Enhanced for high concurrency -->
    <cache alias="default-query-results-region" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <resources>
            <heap unit="entries">5000</heap>
            <offheap unit="MB">200</offheap>
        </resources>
    </cache>

    <cache alias="default-update-timestamps-region" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="minutes">60</ttl>
        </expiry>
        <resources>
            <heap unit="entries">10000</heap>
            <offheap unit="MB">50</offheap>
        </resources>
    </cache>

    <!-- Entity caches for frequently accessed ERP data - Scaled for 500 users -->
    <cache alias="com.example.lazyco.entity.User" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="minutes">45</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">80</offheap>
        </resources>
    </cache>

    <cache alias="com.example.lazyco.entity.Role" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="hours">4</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">20</offheap>
        </resources>
    </cache>

    <cache alias="com.example.lazyco.entity.Permission" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="hours">6</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
            <offheap unit="MB">15</offheap>
        </resources>
    </cache>

    <!-- ERP-specific entity caches for high-frequency data -->
    <cache alias="com.example.lazyco.entity.Customer" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="minutes">20</ttl>
        </expiry>
        <resources>
            <heap unit="entries">3000</heap>
            <offheap unit="MB">120</offheap>
        </resources>
    </cache>

    <cache alias="com.example.lazyco.entity.Product" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="minutes">45</ttl>
        </expiry>
        <resources>
            <heap unit="entries">5000</heap>
            <offheap unit="MB">150</offheap>
        </resources>
    </cache>

    <cache alias="com.example.lazyco.entity.Inventory" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">100</offheap>
        </resources>
    </cache>

    <!-- Configuration and lookup data caches - Enhanced capacity -->
    <cache alias="application-config-cache" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="hours">12</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">30</offheap>
        </resources>
    </cache>

    <!-- Session cache for distributed environments - Scaled for 500 concurrent sessions -->
    <cache alias="session-cache" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">100</offheap>
        </resources>
    </cache>

    <!-- Business logic caches for ERP operations -->
    <cache alias="erp-reports-cache" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="minutes">20</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">200</offheap>
        </resources>
    </cache>

    <cache alias="erp-calculations-cache" uses-template="defaultCacheTemplate">
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1500</heap>
            <offheap unit="MB">80</offheap>
        </resources>
    </cache>
</config>
